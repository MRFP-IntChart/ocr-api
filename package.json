{
  "name": "ocr-api",
  "version": "0.0.1",
  "description": "Provides a thin, easy to use wrapper around scribe.js",
  "type": "module",
  "main": "src/app.js",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/MRFP-IntChart/ocr-api.git"
  },
  "scripts": {
    "build": "npm run clean && npm run compile-ts",
    "cbs": "npm run build && npm run start",
    "clean": "node -e \"require('fs').rmSync('./build', { recursive: true, force: true });\"",
    "compile-ts": "tsc --project ./",
    "start": "node ./build/src/index.js",
    "test": "npm run build && cross-env FOR_TESTING=y mocha --exit --timeout 15000"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "morgan": "^1.10.1",
    "scribe.js-ocr": "^0.8.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/core": "^7.28.0",
    "@babel/node": "^7.28.0",
    "@babel/plugin-transform-runtime": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@types/chai": "^5.2.2",
    "@types/chalk": "^0.4.31",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "@types/uuid": "^10.0.0",
    "chai": "^5.2.1",
    "chai-http": "^5.1.2",
    "cross-env": "^10.0.0",
    "mocha": "^11.7.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "build/**"
    ],
    "env": {
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    }
  },
  "mocha": {
    "extension": [
      "js"
    ],
    "spec": [
      "build/**/*.spec.js"
    ]
  }
}
